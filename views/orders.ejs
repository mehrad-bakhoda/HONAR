<%-include("head");-%>

<%-include("uploadButton");-%>
<section class="page ordersPage">
    <%-include("header");-%>
    <section class="contents">
        <div class="container-fluid">
            <div class="row">
                <%if(orders.length == 0){%>
                <div class="empty">
                  <h2>
                    <i class="fal fa-search"></i>
                    نتیجه ای یافت نشد !
                  </h2>
                </div>
        
                <%}if(orders.length != 0){%> <% orders.forEach(function(product) {
                %>
                <div class="col-xl-3 col-lg-4 col-sm-6 col-xs-12 result">
                  <a href="/Product/<%=product.product.productId%>/<%=product.product.fileName%>">
                    <div class="card product">
                      <div class="card-body">
                          <img src="/<%=product.product.coverPath%>" />
                      </div>
                      <div class="card-footer">
                        <p><%=product.product.fileName%></p>
                        <p>
                          <%=product.product.user.userName%>
                          <i class="fal fa-user"></i>
                        </p>
                      </div>
                    </div>
                  </a>
                  
                </div>
                
        
                <% }) %> <% }%>
                
              </div>
              <div class="buttons">
                <button type="button" class="seeMore">
                    مشاهده بیشتر
                    <i class="fal fa-angle-down"></i>
                </button>
            </div>
        </div>
    </section>
    <%-include("footer");-%>
</section>
<%-include("scripts");-%>
<%-include("scripts");-%>
<% var ordersLength = orders.length;%>

        <script>
          var getordersLength= <%=ordersLength%> ;
          var ordersCounter=4;
          var extraOrders=getordersLength%4;
          if(getordersLength<4){
            $("button.seeMore").fadeOut(400);
          }

            
            $("button.seeMore").click(function () {
                ordersCounter=ordersCounter+4;
            if (ordersCounter+extraOrders>getordersLength  || ordersCounter==getordersLength) {
                $("button.seeMore").fadeOut(400);
            }
            
            });


            </script>