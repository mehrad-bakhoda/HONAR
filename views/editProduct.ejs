<%-include("head");-%>

<section class="page uploadPage">
    <%-include("headerN");-%>
    <section class="contents">
        <div class="container-fluid">
            <%-include("notif");-%>
            <div class="row">
                <img src="/<%=product.coverPath%>" style="max-height: 18rem;
                margin: auto;
                border-radius: 12px;
                max-width: 100%;
                width: auto;" />
                <form action="/editProduct/<%=product.productId%>" enctype="multipart/form-data" method="post">
                    <div class="info">
                        <h4> تغییر اطلاعات اثر </h4>
                        <div class="name">

                            <input name="fileName" type="text" class="nameInput" value="<%=product.fileName%>" required/>
                        </div>
                        <div class="tags">
                            <input name="tags" type="text" class="tagsInput" value="<%=product.tags.join(' ')%>"placeholder="با استفاده از تگ ها بیشتر دیده شوید" />
                        </div>
                        <div class="description">
                            <textarea name="description" class="descriptionText" maxlength="100" placeholder="توضیحات اثر"><%=product.description%></textarea>
                        </div>
                    </div>
                    <div class="category">
                        <lable class="title"> نوع </lable>

                        <div class="options">
                            <input type="text" id="types" name = "types" style="display:none;" value=<%=product.type%> required/>

                            <label for="photography" id="photography" class="radioLabel" id="photography">عکاسی</label>

                            <label for="graphic" id="graphic" class="radioLabel" id="graphic">گرافیک</label>

                            <label for="clip" id="clip" class="radioLabel" id="clip">کلیپ</label>
                        </div>
                    </div>
                    <div class="pricing original">
                        <input name ="orginalPrice" type="text" class="price" onkeypress="return isNumberKey(event)" placeholder="قیمت سایز اصلی" maxlength="11" value="<%=product.orginalPrice%>" required/>
                        <label class="toman"> تومان </label>
                        <label class="free"> رایگان </label>
                    </div>
                    <div class="pricing large">
                        <input name ="largePrice" type="text" class="price" onkeypress="return isNumberKey(event)" placeholder="قیمت سایز بزرگ " maxlength="11" value="<%=product.largePrice%>" required/>
                        <label class="toman"> تومان </label>
                        <label class="free"> رایگان </label>
                    </div>
                    <div class="pricing medium">
                        <input name ="mediumPrice" type="text" class="price" onkeypress="return isNumberKey(event)" placeholder="قیمت سایز متوسط" maxlength="11" value="<%=product.mediumPrice%>" required/>
                        <label class="toman"> تومان </label>
                        <label class="free"> رایگان </label>
                    </div>
                    <div class="pricing small">
                        <input name ="smallPrice" type="text" class="price" onkeypress="return isNumberKey(event)" placeholder="قیمت سایز کوچک" maxlength="11" value="<%=product.smallPrice%>" required/>
                        <label class="toman"> تومان </label>
                        <label class="free"> رایگان </label>
                    </div>
                    <div class="buttons">
                        <button type="submit">تایید</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <%-include("footer");-%>
</section>

<%-include("scripts");-%>
<!-- Custom -->
<script src="/assets/js/uploadPage.js"></script>
<script src="/assets/js/editPage.js"></script>
