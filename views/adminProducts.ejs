<%-include("head");-%>
<section class="adminPage products">
    <%-include("adminSidebar");-%>
    <section class="contents">
        <div class="container-fluid">
            <div class="top">
                <div class="search">
                    <input type="text" placeholder="جستجوی محصولات" />
                    <a onclick="submit_form(); return false;"><i class="fal fa-search"></i></a>
                </div>
                <div class="second">
                    <div class="date">
                        <input type="date" />
                        <div class="buttons">
                            <button type="submit">
                                تایید
                            </button>
                        </div>
                    </div>
                    <div class="sorting">
                        <div class="shownSort">
                            <label class="selectedSort">
                                جدیدترین
                            </label>
                            <i class="fal fa-sort-amount-down-alt"></i>
                        </div>
                        <label for="new" class="sortOption selected" id="new">جدیدترین</label>
                        <label for="old" class="sortOption" id="old">قدیمی ترین</label>
                        <label for="cheap" class="sortOption" id="cheap">ارزان ترین</label>
                        <label for="expensive" class="sortOption" id="expensive">گران ترین</label>
                    </div>
                </div>
            </div>

            <!-- Tabs navs -->
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active"
                       id="acceptedH"
                       data-mdb-toggle="tab"
                       href="#acceptedC"
                       role="tab"
                       aria-controls="acceptedC"
                       aria-selected="true">تایید</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link"
                       id="queueH"
                       data-mdb-toggle="tab"
                       href="#queueC"
                       role="tab"
                       aria-controls="queueC"
                       aria-selected="false">در انتظار</a>
                </li>
            </ul>
            <!-- Tabs navs -->
            <!-- Tabs content -->
            <div class="tab-content" id="ex2-content">
                <div class="tab-pane fade show active"
                     id="acceptedC"
                     role="tabpanel"
                     aria-labelledby="acceptedH">
                    <div class="row">

                        <% confirmedProducts.forEach(function(cProduct) {%>
                        <form action="/delete/<%=cProduct.productId%>" method="POST">
                        <div class="col-lg-6 col-12">
                            <div class="card productCard">
                                <div class="cardTop">
                                    <div class="picture">
                                        <img src="\<%=cProduct.coverPath%>" />
                                    </div>
                                    <div class="detail">
                                        <span class="name">
                                            <%=cProduct.fileName%>
                                        </span>
                                        <span class="dateAdded">
                                            <%=cProduct.date%>
                                        </span>

                                    </div>
                                </div>
                                <div class="buttons">

                                    <button type="submit" class="delete">
                                        حذف
                                        <i class="fal fa-trash"></i>
                                    </button>
                                    <a href="/Product/<%=cProduct.productId%>/<%=cProduct.fileName%>">
                                        مشاهده
                                        <i class="fal fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                    <%})%>


                    </div>
                </div>
                <div class="tab-pane fade"
                     id="queueC"
                     role="tabpanel"
                     aria-labelledby="queueH">
                    <div class="row">


                        <% unconfirmedProducts.forEach(function(uProduct) {%>
                        <form action="/confirm/<%=uProduct.productId%>" method="post">
                        <div class="col-lg-6 col-12">
                            <div class="card productCard">
                                <div class="cardTop">
                                    <div class="picture">
                                        <img src="\<%=uProduct.coverPath%>" />
                                        <%console.log(uProduct.coverPath);%>
                                    </div>
                                    <div class="detail">
                                        <span class="name">
                                            <%=uProduct.fileName%>
                                        </span>
                                        <span class="dateAdded">
                                            <%=uProduct.date%>
                                        </span>

                                    </div>
                                </div>
                                <div class="buttons">
                                    <button type="submit" class="accept">
                                        تایید
                                        <i class="fal fa-check"></i>
                                    </button>
                                   </form>
                                    <a href="/Product/<%=uProduct.productId%>/<%=uProduct.fileName%>">
                                        مشاهده
                                        <i class="fal fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <%})%>




                    </div>



                </div>
            </div>
            <!-- Tabs content -->

        </div>
    </section>
</section>

<%-include("scripts");-%>